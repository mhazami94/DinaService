
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_PanelLoginLayout.cshtml";
}

<div class="row justify-content-center">

    <div class="col-xl-6 col-lg-6 col-md-6 login-main">
        <img src="/img/White.png" />
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">
                                    به دیناسرویس خوش آمدید
                                </h1>
                                <br />
                                <div class="text-danger text-center">
                                    @ViewBag.Message
                                </div>
                            </div>
                            <form class="user" method="post" action="/User/Login">
                                @Html.AntiForgeryToken()
                                <input type="hidden" value="@ViewBag.ReturnUrl" name="returnUrl" />
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-user" dir="rtl" name="username" id="username" aria-describedby="emailHelp" placeholder="نام کاربری">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control form-control-user" dir="rtl" name="password" id="password" placeholder="رمز عبور">
                                </div>
                                <div class="g-recaptcha" data-sitekey="6Lcbx3YaAAAAAEWXP0pMKrsHir3b9DjfQxln5TGc"></div>
                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    Login
                                </button>
                                <hr>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>


